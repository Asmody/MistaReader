<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceScreen
        android:icon="?iconAccount"
        android:key="settingsAccont"
        android:summary="summary"
        android:title="@string/sAccount" >
    </PreferenceScreen>
    <PreferenceScreen
        android:icon="?iconThemes"
        android:key="settingsThemes"
        android:summary="summary"
        android:title="@string/sTheme" >
    </PreferenceScreen>

    <PreferenceCategory
        android:key="settingsNotifications"
        android:title="@string/sNotifications" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="settingsNotificationsUse"
            android:summary="@string/sNotificationsUseD"
            android:title="@string/sNotificationsUse" />

        <ListPreference
            android:defaultValue="15"
            android:dependency="settingsNotificationsUse"
            android:entries="@array/notifications_interval"
            android:entryValues="@array/notifications_interval_values"
            android:key="settingsNotificationsInterval"
            android:summary="summary"
            android:title="@string/sNotificationsInterval" >
        </ListPreference>

        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="settingsNotificationsUse"
            android:key="settingsNotificationsShowInBar"
            android:summary="@string/sNotificationsShowInBarD"
            android:title="@string/sNotificationsShowInBar" />
    </PreferenceCategory>

</PreferenceScreen>